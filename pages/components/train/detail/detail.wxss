.recom{
  width: 750rpx;
  background: #f6f6f6;
}
.recom .item{
  width: 350rpx;
  height: 450rpx;
  background: #ffffff;
  overflow: hidden;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 2rpx 2rpx 15rpx rgba(129, 129, 129, 0.15);
}
.recom .item:nth-of-type(odd){
  margin-left: 15rpx;
  float: left;
}
.recom .item:nth-of-type(even){
  margin-right: 15rpx;
  float: right;
}
.recom .item .figure{
  width: 270rpx;
  height: 270rpx;
  margin: 0 auto;
}
.recom .item .figure image{
  display: block;
  width: 270rpx;
  height: 272rpx;
}
.recom .item .tit{
  height: 60rpx;
  line-height: 30rpx;
  overflow: hidden;
  width: 270rpx;
  margin: 15rpx auto 0;
  font-size: 22rpx;
  color: #5e5e5e;
}
.recom .item .pri{
  font-size: 36rpx;
  color: #1bdacd;
  font-weight: bold;
  margin-top: 10rpx;
  text-align: center;
  line-height: 40rpx;
}
/***底部**/
.fixedfoot{
  position: fixed;
  width: 710rpx;
  height: 135rpx;
  bottom: 0;
  left: 0;
  background: #ffffff;
  z-index: 500;
  padding: 0 20rpx;
}
.fixedfoot .foot{
  height: 85rpx;
  width: 750rpx;
}
.fixedfoot .foot .section{
  width: 100rpx;
  display: block;
