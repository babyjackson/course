  overflow: hidden;
  height: 85rpx;
}
.fixedfoot .foot .section .img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.fixedfoot .foot .section .img image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.fixedfoot .foot .section .text{
  font-size: 24rpx;
  color: #434343;
  text-align: center;
  line-height: 25rpx;
  margin-top: 15rpx;
}
button::after{
  border:0;
}
.fixedfoot .foot .btnwr{
  width: 520rpx;
  height: 80rpx;
}
.fixedfoot .foot .btnwr .jrgwc{
  width: 260rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #ffffff;
  background: #2ac8f1;
  border-radius: 38rpx 0 0 38rpx;
  overflow: hidden;
}
.fixedfoot .foot .btnwr .ljgm{
  width: 230rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #ffffff;
  background: #15c0b7;
  border-radius: 0rpx 38rpx 38rpx 0rpx;
