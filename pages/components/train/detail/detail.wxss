/***info**/
.goodsinfo{
  padding: 0 15rpx;
}
.goodsinfo .tit{
  font-size: 30rpx;
  color: #3a3a3a;
  line-height: 55rpx;
}
.goodsinfo .wrap{
  margin-top: 25rpx;
}
.goodsinfo .wrap .pri{
  font-size: 48rpx;
  color: #1bdacd;
  line-height: 50rpx;
  font-weight: bold;
}
.goodsinfo .collect{
  position: relative;
  width: 180rpx;
  height: 45rpx;
}
.goodsinfo .collect .collbg{
  width: 180rpx;
  height: 45rpx;
}
.goodsinfo .collect .collbg image{
  display: block;
  width: 180rpx;
  height: 45rpx;
}
.goodsinfo .collect .coll{
  position: absolute;
  width: 180rpx;
  height: 45rpx;
  left: 0;
  top: 0;
}
.goodsinfo .collect .coll .ico{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 8rpx 8rpx 8rpx 50rpx;
}
.goodsinfo .collect .coll .ico image{
   display: block;
  width: 30rpx;
  height: 30rpx;
}
.goodsinfo .collect .coll .text{
  font-size: 24rpx;
  color: #f6f6f6;
  line-height: 45rpx;
}
/***店铺***/
.store{
  background: #fff;
  padding: 30rpx 15rpx;
}
.store .sinfo{
  height: 100rpx;
  overflow: hidden;
}
.store .sinfo .figure{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow:hidden;
  margin: 0 15rpx;
}
.store .sinfo .figure image{
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.store .sinfo .tit{
  font-size: 30rpx;
  line-height: 60rpx;
  color: #1a1a1a;
}
.store .sinfo .describe{
  font-size: 24rpx;
  color: #aaaaaa;
  line-height: 25rpx;
  width: 580rpx;
  overflow: hidden;
}
.store .sdl{
  display: flex;
  height: 85rpx;
  width: 100%;
}
.store .sdl .item{
  flex: 1;
  text-align: center;
  border-left: 3rpx solid #e4e4e4;
}
.store .sdl .item:nth-of-type(1){
  border: 0;
}
.store .sdl .item .num{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #272627;
}
.store .sdl .item .text{
  line-height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  color: #9c999c;
}
.store .btn{
  width: 520rpx;
  margin: 0 auto;
}
.store .btn .cbt{
  width: 230rpx;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 15rpx rgba(92, 92, 92, 0.15);
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
.store .btn .btn1{
  background:linear-gradient(to right,#1bd9cd,#1dccdb);
  color: #fff;
  margin-left: 15rpx;
}
.store .btn .btn2{
  background: #fff;
  color: #1bd9cd;
  margin-right: 15rpx;
}
.detailTab{  
  display: flex;
  width: 100%;  
  border-bottom: 1rpx solid #e5e5e5;  
  text-align: center;  
  line-height: 70rpx;
  font-size: 24rpx;
  color: #9d9c9c;
  margin-bottom: 25rpx;
}  
.detailTab view{  
  font-size: 30rpx;  
  flex: 1; 
  border-bottom: 4rpx solid #fff;
}  
.detailTab .active{ 
  color: #1bd9cd;  
  border-bottom: 4rpx solid #1bd9cd;
  }  

.contDetail{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden;
  }  
.con-item{  
    display: none; width:100%;
}  
.on{
  display: block;
} 
.detailImg{
  width: 100%;
}
.detailImg image{
  width: 100%;
  height: 520rpx;
}
.evaluate{
 margin: 0 15rpx;
  border-bottom: 2px solid #eee9ef;
  padding: 30rpx 0;
}
.evaluate .user{
  height: 45rpx;
}
.evaluate .user .img{
  width:45rpx;
  height: 45rpx;
  border-radius: 50%;
  overflow: hidden;
}
.evaluate .user .img image{
  width: 45rpx;
