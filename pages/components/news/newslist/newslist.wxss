/* pages/components/news/newslist/newslist.wxss */
.h-75{
  height: 75rpx;
}
.h-40{
  height: 40rpx;
}
.newsban{
  height: 650rpx;
  padding: 25rpx 15rpx 0 15rpx;
  background: #13948c;
}
.newsban .ban{
  width: 720rpx;
  height: 650rpx;
}
.newsban .ban .item{
  width: 720rpx;
  height: 570rpx;
  border-radius: 20rpx;
  background: #ffffff;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.2);
}
.newsban .ban .item .figure{
  height: 425rpx;
  width: 720rpx;
}
.newsban .ban .item .figure image{
  display: block;
  width: 720rpx;
  height: 425rpx;
}
.newsban .ban .item .dl{
  width: 720rpx;
  height: 145rpx;
}
.newsban .ban .item .dl .tit{
  height: 80rpx;
  overflow: hidden;
  padding: 0 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #151515;
  line-height: 80rpx;
}
.newsban .ban .item .dl .text{
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #b7b7b7;
  text-align: center;
}
/**banner默认样式修改***/
.newsban .wx-swiper-dots.wx-swiper-dots-horizontal{
    bottom: 35rpx;
}
.newsban .ban .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 0rpx;
    justify-content:space-between;
    border-radius:5rpx;
 }
.newsban .ban .wx-swiper-dot::before{
    content: '';
    flex-grow: 0; 
    overflow: hidden;
    border-radius:5rpx;
 }
.newsban .ban .wx-swiper-dot-active{
    width:30rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 0rpx;
    border-radius: 5rpx;
    overflow: hidden;
    border:0;
}
.newsban .ban .wx-swiper-dot-active::before{
  content: '';
  flex-grow: 0; 
  overflow: hidden;
  border-radius: 5rpx;
}
/****新闻列表****/
.newslist{
  padding: 35rpx 15rpx 0 15rpx;
  background: linear-gradient(to right,#1ad3c9,#1ecbdb);
}
.newslist .item{
  height: 260rpx;
  width: 720rpx;
  background: #d1f7f5;
  border-radius: 25rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.13);
  margin-top: 35rpx;
}
.newslist .item:nth-of-type(1){
  margin-top: 0;
}
.newslist .item .figure{
  width: 300rpx;
  height: 200rpx;
  border:5rpx solid #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 20rpx 25rpx;
}
.newslist .item .figure image{
  display: block;
  width: 300rpx;
  height: 200rpx;
}
.newslist .item .dl{
  width: 325rpx;
  height: 210rpx;
  margin: 20rpx 0;
}
.newslist .item .dl .tit{
  height: 70rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: #084f4a;
  line-height: 70rpx;
}
.newslist .item .dl .text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #7eb0b3;
  overflow: hidden;
}
.newslist .item .dl .dd{
  height: 30rpx;
}
.newslist .item .dl .dd .ico{
  width: 30rpx;
  height: 30rpx;
}
.newslist .item .dl .dd .ico image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.newslist .item .dl .dd .coll{
  font-size: 21rpx;
  color: #1bdacd;
  line-height: 30rpx;
}
.newslist .item .dl .dd .glance{
  font-size: 21rpx;
  color: #1bdacd;
  line-height: 30rpx;
  margin-left: 20rpx;
}

.loadmore{
  height: 115rpx;
  line-height: 115rpx;
  text-align: center;
  font-size: 30rpx;
  color: #13988f;
}