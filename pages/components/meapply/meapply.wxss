.apply{
  background: #ffffff;
}
.apply .item{
  width: 700rpx;
  padding: 25rpx 25rpx;
  height: 75rpx;
  border-bottom: 2rpx solid #f1f1f1;
  overflow: hidden;
}
.apply .item .figure{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
}
.apply .item .figure image{
  display: block;
  width: 75rpx;
  height: 75rpx;
}
.apply .item .dl{
  width: 460rpx;
  height: 75rpx;
  margin-left: 40rpx;
}
.apply .item .dl .tit{
  font-size: 28rpx;
  color: #1d1d1d;
  line-height: 35rpx;
}
.apply .item .dl .time{
  font-size: 26rpx;
  color: #1d1d1d;
  margin-top: 10rpx;
  line-height: 30rpx;
}
.apply .item .dl .time text{
  color: #ee5e54;
  font-weight: bold;
  margin-right: 15rpx;
}
.apply .item .btn{
  width: 115rpx;
  height: 50rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  line-height: 50rpx;
}
.apply .item .btn.btn1{
  background: #fa9f13;
}
.apply .item .btn.btn2{
  background: #5fdeff;
}
.apply .item .btn.btn3{
  background: #ee5e54;
}

.expand {
    position: fixed;
    height: 100%;
    z-index: 99;
}
.dropdown-bg {
    opacity: 0;
    transition: opacity linear 0.1s;
}

.expand .dropdown-bg {
    opacity: 1;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.dealertw{
  opacity: 0;
  height: 0;
  overflow: hidden;
  transition: opacity linear 0.1s;
}
.expand .dealertw{
  opacity: 1;
  position: absolute;
  width: 540rpx;
  height: 540rpx;
  margin-left: -270rpx;
  margin-top: -270rpx;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  background: #fff;
  z-index: 800;
  overflow: visible;
}
.dealert{
  position: relative;
  width: 540rpx;
  height: 540rpx;
}
.dealert .figuretop{
  width: 310rpx;
  height: 275rpx;
  position: absolute;
  margin-left: -155rpx;
  left: 50%;
  top:-75rpx;
}
.dealert .figuretop image{
  display: block;
  width: 310rpx;
  height: 275rpx;
}
.dealert .close{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: -25rpx;
  top: -25rpx;
}
.dealert .close image{
  display: block;
  width: 50rpx;
  height: 50rpx;
}
.dealert .info .tit{
  text-align: center;
  padding: 0 40rpx;
  color: #282828;
  font-size: 40rpx;
}
.dealert .info .tips{
  color: #8b8b8b;
  font-size: 28rpx;
  text-align: center;
  padding: 0 40rpx;
  line-height: 45rpx;
}