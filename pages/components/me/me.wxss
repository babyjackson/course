.mebanw{
  position: relative;
  width: 750rpx;
  height: 325rpx;
}
.mebanw .bgban{
  height: 220rpx;
  width: 750rpx;
  background: #1bdacd;
}
.meban{
  position: absolute;
  height: 325rpx;
  width: 750rpx;
  top: 0;
  left: 0;
}
.meban .figure{
  position: absolute;
  background: #fff;
  width: 160rpx;
  height: 160rpx;
  margin-left: -80rpx;
  left: 50%;
  top: 20rpx;
  border:5rpx solid #fff;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.15);
}
.meban .figure image{
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.meinfo{
  width: 715rpx;
  height: 220rpx;
  border-radius: 20rpx;
  background: #ffffff;
  margin: 0 auto;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.15);
}
.meinfo .name{
  font-size: 35rpx;
  color: #7a7a7a;
  line-height: 45rpx;
  text-align: center;
}
.meinfo .myaddr{
  margin-top: 10rpx;
  font-size: 21rpx;
  color: #1bdacd;
  line-height: 30rpx;
  text-align: center;
}
.myorder .alldd{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.myorder .alldd .lab{
  font-size: 30rpx;
  color: #323232;
  line-height: 90rpx;
}
.myorder .alldd .ck{
  font-size: 24rpx;
  color: #7d7d7d;
  line-height: 90rpx;
}
.myorder .alldd .icor{
  width: 20rpx;
  height: 30rpx;
  margin: 30rpx 0 30rpx 5rpx;
}
.myorder .alldd .icor image{
  display: block;
  width: 20rpx;
  height: 30rpx;
}
.orderw{
