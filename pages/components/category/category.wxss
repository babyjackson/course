/* pages/components/category/category.wxss */

page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.searchW{
  padding: 20rpx 0;
  border-bottom: 2rpx solid #dddddd;
  background: #f7f3f7;
}
.search{
  width: 690rpx;
  height: 60rpx;
  border-radius: 3rpx;
  overflow: hidden;
  position: relative;
  text-align: center;
  margin: 0 auto;
}
.search .inp{
  width: 690rpx;
  height: 60rpx;
  border-radius: 5rpx;
  overflow: hidden;
  background: #ffffff;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}
.search .icon{
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  left: 230rpx;
  top: 10rpx;
  z-index: 2;
}

/***左侧导航***/
.leftNav{
  width: 200rpx;
  background: #f0efef;
  overflow: hidden;
}
.leftNav .item{
  height: 100rpx;
  font-size: 24rpx;
  color: #757575;
  padding: 0 20rpx;
  width: 160rpx;
  line-height: 100rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.leftNav .item.on{
  background: #fff;
  color: #1bdacd;
}
.rightClass{
  width: 530rpx;
}
.rightClass .firstnav .tit{
  height: 100rpx;
  font-size: 27rpx;
  color: #161616;
  text-indent: 20rpx;
  line-height: 100rpx;
}
.rightClass .secondnav .item{
  width: 120rpx;
  height: 200rpx;
  margin: 0 25rpx;
}
.rightClass .secondnav .item .figure{
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
}
.rightClass .secondnav .item .figure image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
}
.rightClass .secondnav .item .setit{
  height: 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 120rpx;
  text-align: center;
  line-height: 35rpx;
  font-size: 24rpx;
  color: #4d4d4d;
  margin: 20rpx 0;
}