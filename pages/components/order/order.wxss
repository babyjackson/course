/* pages/component/wddd/wddd.wxss */
page{
  background: #efefef;
}
.orderno{
  width: 750rpx;
  background: #fff;
}
.orderno .figure{
  margin: 0 auto;
  width: 530rpx;
  height: 355rpx;
}
.orderno .figure image{
  display: block;
  width: 530rpx;
  height: 355rpx;
}
.h-200{
  height: 200rpx;
}
.h-180{
  height: 180rpx;
}
.h120{
  height: 120rpx;
}
.h-40{
  height: 40rpx;
}
.contwddd .cont-item{
  display: none;
}
.contwddd  .on{
  display: block;
}
.myorderTab{
  display: flex;
  padding: 0rpx 20rpx;
  border-top: 1px solid #f0f0f0;
  background: #fff;
}
.myorderTab .item{
  text-align: center;
  padding: 35rpx 0;
  flex: 1;
  position: relative;
  color: #5d5d5d;
  font-size: 30rpx;
}
.myorderTab .active{
  color: #1bdacd;
  border-bottom: 4rpx solid #1bdacd;
}
.myorderTab .item .tips{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  background-color:#1bdacd;
  border-radius: 50%;
  padding: 0;
  top:12rpx;
  right:0rpx;
  font-size: 20rpx;
}
.contwddd{
 background-color:#efefef;
 margin:15rpx 0;

}
.contwddd .cont-item{
  background-color:#efefef;
}
.hasorder{
  margin: 0 15rpx;
  background-color: #fff;
  margin-bottom:20rpx; 
}
.orderallTit{
  font-size: 30rpx;
  color: #23242a;
  font-weight: bold;
  background-color: #f7f7f7;
  border-bottom: 2rpx solid #ededed;
  line-height: 70rpx;
  padding: 0 15rpx;
}
.dptit{
  font-size: 30rpx;
  line-height: 80rpx;
  padding: 0 15rpx;
  border-bottom: 2rpx solid #f1f1f1;
  background: #f7f7f7;
}
.goodscon{
  border-bottom: 2rpx solid #eeeeee;
  padding: 30rpx 20rpx;
}
.goodscon .img{
  width: 145rpx;
  height:145rpx;
}
.goodscon .img image{
  width:145rpx;
  height: 145rpx;
}
.goodscon .titleC{
  width: 420rpx;
  height: 100rpx;
  margin-left: 15rpx;
}
.goodscon .titleC .tit{
  font-size: 28rpx;
  color: #292828;
  line-height: 40rpx;
  width: 420rpx;
  overflow: hidden;

  
}
.goodscon .titleC .tips{
  font-size: 28rpx;
  color: #929193;
}
.goodscon .price{
  width: 100rpx;
  height: 100rpx;
  font-size: 28rpx;
}
.goodscon .price text{
  display: block;
  text-align: right;
}
.goodscon .price .yuanj{
  color: #828282;
  text-decoration: line-through;
}
.goodscon .price .sf{
  color: #515151;
}
.goodscon .price .num{
