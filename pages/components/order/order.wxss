/***猜你喜欢***/
.wander{
  padding: 0 15rpx;
  background: #eeeeee;
}
.wander .item{
  width: 350rpx;
  height: 445rpx;
  border-radius: 25rpx;
  background: #ffffff;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 25rpx;
}
.wander .item:nth-of-type(odd){
  float: left;
}
.wander .item:nth-of-type(even){
  float:right;
}
.wander .item .figure{
  width: 270rpx;
  height: 270rpx;
  margin: 0 auto;
  border-radius: 20rpx;
}
.wander .item .figure image{
  display: block;
  width: 270rpx;
  height: 270rpx;
}
.wander .item .tit{
  width: 270rpx;
  height: 65rpx;
  margin:10rpx auto 0;
  line-height: 32rpx;
  font-size: 22rpx;
  color: #5e5e5e;
  overflow: hidden;
}
.wander .item .price{
  font-size: 36rpx;
  color: #1bdacd;
  text-align: center;
  font-weight: bold;
  line-height: 40rpx;
}