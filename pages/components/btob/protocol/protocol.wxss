.state{
  padding: 0 15rpx;
}
.state .tit{
  font-size: 32rpx;
  color: #000000;
  line-height: 55rpx;
}
.state .text{
  font-size: 28rpx;
  color: #686868;
  line-height: 50rpx;
  text-indent: 50rpx;
}
.conditions{
  padding: 0 15rpx;
}
.conditions .tit{
  font-size: 28rpx;
  color: #000000;
  line-height: 55rpx;
}
.conditions .cif{
  font-size: 28rpx;
  color: #686868;
  line-height: 50rpx;
}

.expand {
    position: fixed;
    height: 100%;
    z-index: 99;
}
.dropdown-bg {
    opacity: 0;
    transition: opacity linear 0.1s;
}

.expand .dropdown-bg {
    opacity: 1;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.checkSelect{
  height: 30rpx;
  padding: 0 15rpx;
  font-size: 24rpx;
  line-height: 30rpx;
}
.checkSelect .select{
  width: 30rpx;
  height: 30rpx;
  border:2rpx solid #b3b3b3;
  margin: 0 20rpx 0 0rpx;
  position: relative;
}
.checkSelect .select image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.checkSelect text{
  color: #0cc8a5;
}

.moveinto{
  width: 715rpx;
  height: 75rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  line-height: 75rpx;
  background: #1bdacd;
}
.moveinto .btn{
  background:rgba(0, 0, 0, 0);
  border: 0;
  font-size: 32rpx;
  color: #ffffff;
}
.moveinto .btn::after{
  margin: 0;
  padding: 0;
}
.dealertw{
  opacity: 0;
  height: 0;
  overflow: hidden;
  transition: opacity linear 0.1s;
}
.expand .dealertw{
  opacity: 1;
  position: absolute;
  width: 540rpx;
  height: 540rpx;
  margin-left: -270rpx;
  margin-top: -270rpx;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  background: #fff;
  z-index: 800;
  overflow: visible;
}
.dealert{
  position: relative;
  width: 540rpx;
  height: 540rpx;
}
.dealert .figuretop{
  width: 310rpx;
  height: 275rpx;
  position: absolute;
  margin-left: -155rpx;
  left: 50%;
  top:-75rpx;
}
.dealert .figuretop image{
  display: block;
  width: 310rpx;
  height: 275rpx;
}
.dealert .close{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: -25rpx;
  top: -25rpx;
}
.dealert .close image{
  display: block;
  width: 50rpx;
  height: 50rpx;
}
.dealert .info .tit{
  text-align: center;
  padding: 0 40rpx;
  color: #282828;
  font-size: 40rpx;
}
.dealert .info .tips{
  color: #8b8b8b;
  font-size: 28rpx;
  text-align: center;
}